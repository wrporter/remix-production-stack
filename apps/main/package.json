{
  "name": "remix-production-stack",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "imports": {
    "#app/*": "./app/*",
    "#server/*": "./server/*",
    "#tests/*": "./tests/*"
  },
  "scripts": {
    "build": "run-s build:*",
    "build:remix": "remix vite:build --sourcemapClient --sourcemapServer",
    "build:server": "tsx other/build-server.ts",
    "ci": "run-p lint typecheck test:coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "dev": "npm run dev:base -- server/main.ts",
    "dev:base": "tsx watch --env-file=.env --clear-screen=false --ignore \".cache/**\" --ignore \"app/**\" --ignore \"vite.config.ts.timestamp-*\" --ignore \"build/**\" --ignore \"node_modules/**\"",
    "dev:debug": "npm run dev:base -- --inspect server/main.ts",
    "format": "prettier --write .",
    "lint": "eslint .",
    "start": "NODE_ENV=production node server-build/main.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@conform-to/react": "1.1.4",
    "@conform-to/zod": "1.1.4",
    "@epic-web/remember": "1.1.0",
    "@nextui-org/react": "2.4.1",
    "@remix-run/express": "2.9.2",
    "@remix-run/node": "2.9.2",
    "@remix-run/react": "2.9.2",
    "@wesp-up/express": "1.0.1",
    "@wesp-up/express-remix": "1.0.1",
    "drizzle-orm": "0.31.2",
    "eslint-plugin-remix-react-routes": "1.0.5",
    "express": "4.19.2",
    "framer-motion": "11.2.10",
    "isbot": "4.4.0",
    "postgres": "3.4.4",
    "prom-client": "15.1.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "tailwindcss": "3.4.4",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@epic-web/config": "1.10.0",
    "@remix-run/dev": "2.9.2",
    "@remix-run/serve": "2.9.2",
    "@remix-run/testing": "2.9.2",
    "@testing-library/dom": "10.1.0",
    "@testing-library/jest-dom": "6.4.6",
    "@testing-library/react": "16.0.0",
    "@testing-library/user-event": "14.5.2",
    "@types/eslint": "8.56.10",
    "@types/express": "4.17.21",
    "@types/node": "20.14.2",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@vitejs/plugin-react": "4.3.1",
    "@vitest/coverage-v8": "1.6.0",
    "autoprefixer": "10.4.19",
    "drizzle-kit": "0.22.7",
    "esbuild": "0.21.5",
    "eslint": "9.4.0",
    "jsdom": "24.1.0",
    "msw": "2.3.1",
    "npm-run-all": "4.1.5",
    "prettier": "3.3.2",
    "prettier-plugin-sql": "0.18.0",
    "prettier-plugin-tailwindcss": "0.6.4",
    "tsx": "4.15.4",
    "typescript": "5.4.5",
    "vite": "5.3.0",
    "vitest": "1.6.0"
  }
}
